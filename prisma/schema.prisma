datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id    Int    @id @default(autoincrement())
  name  String @unique
  tasks Task[]
}

model Task {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  projectId   Int
  project     Project @relation(fields: [projectId], references: [id])
}
